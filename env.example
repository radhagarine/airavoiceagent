# Daily credentials
DAILY_API_KEY=your_daily_api_key
DAILY_API_URL=https://api.daily.co/v1

# Option 1: JSON mapping in environment variable (cleanest approach)
TWILIO_BUSINESS_MAPPING={"1+4155551234":{"account_sid":"your_account_sid1","auth_token":"your_auth_token_1","name":"Acme Restaurant"},"1+4155552345":{"account_sid":"your_account_sid2","auth_token":"your_auth_token_2","name":"City Spa"}}

# Option 2: JSON config file path
TWILIO_CONFIG_PATH=./twilio_config.json

# Option 3: Individual account method (legacy support)
# Primary Twilio Account
TWILIO_ACCOUNT_SID=your_prmary_account_sid1
TWILIO_AUTH_TOKEN=your_secondary_auth_token
# Comma-separated list of phone numbers for primary account
TWILIO_PRIMARY_PHONES=+14155552345,+14155552344

# Secondary Twilio Account
TWILIO_ACCOUNT_SID_1=your_secondary_account_sid2
TWILIO_AUTH_TOKEN_1=your_secondary_auth_token
# Comma-separated list of phone numbers for secondary account
TWILIO_ACCOUNT_1_PHONES=+14155552345

# Service keys
OPENAI_API_KEY=your_openai_api_key
CARTESIA_API_KEY=your_cartesia_api_key

# Supabase credentials
SUPABASE_URL=your_supabase_url
SUPABASE_KEY=your_supabase_service_key

# LanceDB path (directory where vector databases are stored)
# Set this to the path of your existing LanceDB data directory
LANCEDB_PATH=/path/to/your/lancedb_data

# Monitoring and Observability (Optional - disabled by default)
METRICS_ENABLED=false
TRACING_ENABLED=false
STRUCTURED_LOGGING_ENABLED=false

# Metrics configuration
PUSHGATEWAY_URL=
METRICS_UPDATE_INTERVAL=10
LOG_LEVEL=INFO
LOG_FORMAT=console

# Jaeger configuration (for tracing)
JAEGER_HOST=localhost
JAEGER_PORT=6831

# Optional: Set environment
ENVIRONMENT=development
APP_VERSION=1.0.0

# Cache Configuration
# L1 Cache (In-Memory)
CACHE_L1_SIZE=500
CACHE_L1_TTL=300

# Cache TTL Configuration (in seconds)
CACHE_BUSINESS_TTL=1800      # 30 minutes (business info is stable)
CACHE_KNOWLEDGE_TTL=3600     # 1 hour (knowledge base is stable)  
CACHE_DEFAULT_TTL=600        # Default TTL (10 minutes)

# Cache Performance Settings
CACHE_COMPRESSION=true       # Enable compression for large values
CACHE_PREFIX=voice_bot      # Cache key prefixlay in seconds

# Redis configuration (single instance)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0